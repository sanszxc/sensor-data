#include <WiFi.h>
#include <HTTPClient.h>

// --- Pin Config ---
#define TRIG_PIN 25
#define ECHO_PIN 12
#define LED_PIN 13

// --- WiFi ---
const char* ssid = "Aodeiei";
const char* password = "12345678";

// --- Webhook URL ---
const char* webhookURL = "https://webhook.site/9f82bd5a-d10a-4767-949a-816ba9b7fd1e";

// --- Detection ---
const int detectionThreshold = 50; // cm
int peopleCount = 0;
bool wasPerson = false;

void setup() {
  Serial.begin(115200);
  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);
  pinMode(LED_PIN, OUTPUT);
  digitalWrite(LED_PIN, LOW);

  // Connect to WiFi
  WiFi.begin(ssid, password);
  Serial.print("Connecting to WiFi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(50);
    Serial.print(".");
  }
  Serial.println(" connected");
}

void loop() {
  float distance = measureDistance();
  Serial.print("Distance: ");
  Serial.println(distance);

  if (distance > 0 && distance < detectionThreshold) {
    digitalWrite(LED_PIN, HIGH); // à¹„à¸Ÿà¸•à¸´à¸”
    if (!wasPerson) {
      wasPerson = true; // à¸à¸±à¸™à¸™à¸±à¸šà¸‹à¹‰à¸³
      peopleCount++;
      Serial.print("ğŸ§â€â™‚ï¸ à¸„à¸™à¹€à¸”à¸´à¸™à¸œà¹ˆà¸²à¸™! à¸£à¸§à¸¡ = ");
      Serial.println(peopleCount);
      sendWebhook(peopleCount);
    }
  } else {
    digitalWrite(LED_PIN, LOW); // à¹„à¸¡à¹ˆà¸¡à¸µà¸„à¸™ = à¹„à¸Ÿà¸”à¸±à¸š
    wasPerson = false;
  }

  delay(300); // à¸›à¸£à¸±à¸š delay à¹ƒà¸«à¹‰à¹€à¸«à¸¡à¸²à¸°à¸à¸±à¸šà¸à¸²à¸£à¸•à¸£à¸§à¸ˆà¸ˆà¸±à¸š
}

float measureDistance() {
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);

  long duration = pulseIn(ECHO_PIN, HIGH, 30000); // 30ms = max ~5m
  if (duration == 0) return -1;
  float distance = duration * 0.0343 / 2;
  return distance;
}

void sendWebhook(int count) {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin(webhookURL);
    http.addHeader("Content-Type", "application/json");

    String payload = "{\"people_count\": " + String(count) + "}";
    int httpResponseCode = http.POST(payload);

    if (httpResponseCode > 0) {
      Serial.println("âœ… Webhook à¸ªà¹ˆà¸‡à¹à¸¥à¹‰à¸§! à¸£à¸«à¸±à¸ª: " + String(httpResponseCode));
    } else {
      Serial.println("âŒ à¸ªà¹ˆà¸‡ Webhook à¹„à¸¡à¹ˆà¸ªà¸³à¹€à¸£à¹‡à¸ˆ");
    }

    http.end();
  }
}
